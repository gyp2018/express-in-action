<% include header %>

<% if (entries.length) { %>
  <% entries.forEach(entry => { %>
    <div class="card my-5">
      <div class="card-header">
        <span class="float-right">
          <%= entry.published %>
        </span>
        <%= entry.title %>
      </div>
      <div class="card-body">
        <%= entry.content %>
      </div>
    </div>
  <% }) %>
<% } else { %>
  No entries! <a href="/new-entry">Add one!</a>
<% } %>

<% include footer %>
